{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
    <h1>lista de Usuarios</h1>
    <table>
        <thead>
            <tr>#</tr>
            <tr>Nombre</tr>
            <tr>Apellidos</tr>
            <tr>email</tr>
            <tr>Estado</tr>
            <tr>Acciones</tr>
        </thead>
    </table>
    <tbody>
    {% for user in listUsers %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.status }}</td>
            <td>
                <a href="#" class="btn btn-warning">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
{% endblock %}